<div class='container'>
  <p id="notice"><%= notice %></p>

  <h3>Tools</h3>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Language</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <tr>
          <td><%= tool.id %></td>
          <td><%= tool.name %></td>
          <td><%= tool.language %></td>
          <td><%= link_to 'Show', tool %></td>
          <td><%= link_to 'Update', tool_path(tool), method: :patch %></td>
          <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Tool', new_tool_path %>
</div>
